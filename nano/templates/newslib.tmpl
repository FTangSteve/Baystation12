{{if data.error}}
	<h2>Error</h2>
	{{:data.error}}<br><br>
	{{:helper.link("Reset", null, {'reseterror' : 1})}}
{{else data.current_news}}
	<h2>{{:data.current_news.title}}</h2>
	<div class="item">
		<div class="itemLabel">
			Author: 
		</div>
		<div class="itemContent">
			 {{:data.current_news.author}}
		</div>
		<div class="itemLabel">
			NWSN: 
		</div>
		<div class="itemContent">
			{{:data.current_news.id}}
		</div>
		<div class="itemLabel">
			Commands: 
		</div>
		<div class="itemContent">
			{{:helper.link("Close", null, {'closenews' : 1})}}
			{{:helper.link("Print", null, {'printnews' : 1})}}
		</div>
	</div>
	<div style="background-color: #FFFFFF; padding: 6px;">
		{{:data.current_news.content}}
	</div>
{{else}}
	<h2>External Archives</h2>
	<div class="item">
		<div class="itemLabel">
			Scanner:
		</div>
		<div class="itemContent">
			{{:data.scanner ? 'Connected' : 'Not Connected'}}
		</div>
	</div>
	<div class="item">
		<div class="itemLabel">
			Commands:
		</div>
		<div class="itemContent">
			{{:helper.link("View By NWSN", null, {'viewid' : 1})}}
			{{:helper.link("Upload From Scanner", null, {'uploadnews' : 1})}}
			{{:helper.link("Connect to Scanner", null, {'connectscanner' : 1})}}
		</div>
	</div>
	<div class="item">
		<div class="itemLabel">
			Sort by:
		</div>
		<div class="itemContent">
			{{:helper.link("Title", null, {'sortby' : 'title'})}}
			{{:helper.link("Author", null, {'sortby' : 'author'})}}
			{{:helper.link("Category", null, {'sortby' : 'category'})}}
			{{:helper.link("NWSN", null, {'sortby' : 'id'})}}
		</div>
	</div>

	<table style="width:100%">
		<tr><th style="width:20%">Commands<th style="width:40%">Title<th style="width:15%">Author<th style="width:15%">Category<th style="width:10%">NWSN
		{{for data.news_list}}
		<tr><td>{{:helper.link("View", null, {'viewnews' : value.id})}}
			<td>{{:value.title}}
			<td>{{:value.author}}
			<td>{{:value.category}}
			<td>{{:value.id}}
		</div>
		{{/for}}
	</table>
{{/if}}
